<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/md_brown_100_color_code"
    >
            <LinearLayout
                android:id="@+id/root_layout_chat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ListView
                    android:id="@+id/msg_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#0000"
                    >
                </ListView>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/md_grey_300_color_code"
            >
            <EditText
                android:id="@+id/edit_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/edit_chat_hint"
                />
            <Button
                android:id="@+id/sent_input"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:text="@string/file_btn"
                android:textColor="@color/md_white_color_code"
                android:background="@drawable/send_btn_selector"
                />
        </LinearLayout>
    </LinearLayout>
