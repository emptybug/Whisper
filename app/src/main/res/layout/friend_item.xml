<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:context="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    >
    <ImageView
        android:id="@+id/header_item"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="8dp"
        android:src="@drawable/header_normal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/name_friend_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            context:text="大黄蜂"
            android:maxLines="1"
            android:textSize="24dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/ip_friend_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            context:text="192.168.1.1"
            android:textSize="16dp"
            android:maxLines="1"
            android:textColor="@color/md_grey_500_color_code"
            />
    </LinearLayout>
</LinearLayout>